extends layout

block content
    
  .main.container
    .row
      h1=title
      p=message
      .col-md-4
        h1.display-4.m-b-2 Connexion 

        form(method='POST' action='/login')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder="Nom d'utilisateur" name='email')
          div.form-group
            label(for='pw') Mot de passe:
            input#pw.form-control(type='password' name='pass')
          button.btn.btn-primary(type='submit') Connexion 

      .col-md-4.col-md-offset-3
        h1.display-4.m-b-2 Inscription 

        form(method='POST' action='/signup')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='nom@email.be' name='username')
          div.form-group
            label(for='pw') Mot de passe:
            input#pw.form-control(type='password' name='password')
          div.form-group
            label(for='pw2') Confirmer mot de passe:
            input#pw2.form-control(type='password' name='passwordconfirm')
          button.btn.btn-primary(type='submit') Inscription
